    <!-- form projek -->
    <section id="projek">
      <div class="container">
        <bs5-grid-row class="text-center">
          <col>
            <h2 class="mt-md-5 fw-bold text-center">update my project</h2>
          </col>
        </bs5-grid-row>
        <div
          class="row justify-content-center align-items-center g-2 mb-3 mt-3"
        >
          <div class="col-md-7">
            <form method="post" action="/updateProjek" enctype="multipart/form-data" class="for">
              <div class="mb-3">
                <input type="hidden" name="id" value="{{data.id}}" class="id" />
                <label for="projekname" class="form-label">Projek name :</label>
                <input
                  type="text"
                  name="projekName"
                  value="{{data.title}}"
                  class="form-control shadow-sm"
                  id="projekname"
                  aria-describedby="projekname"
                />
              </div>

              <div class="row justify-content-center align-items-center g-2">
                <div class="col-md-6">
                  <div class="mb-3">
                    <label for="starProjek" class="form-label">star date :</label>
                    <input
                      type="date"
                      name="starDate"
                      value="{{data.starDate}}"
                      class="form-control shadow-sm"
                      id="starProjek"
                      aria-describedby="starProjek"
                    />
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="mb-3">
                    <label for="endProjek" class="form-label">end date :</label>
                    <input
                      type="date"
                      name="endDate"
                      value="{{data.endDate}}"
                      class="form-control shadow-sm"
                      id="endProjek"
                      aria-describedby="endProjek"
                    />
                  </div>
                </div>
              </div>
              <div class="mb-3">
                <label for="pesan" class="form-label">Description :</label>
                <textarea
                  class="form-control"
                  name="pesan"
                  id="pesan"
                  rows="6"
                >{{data.pesan}}</textarea>
              </div>
              <label for="techno" class="label">Technologies :</label>

              <div class="techno">
                <div class="star-techno-conten">
                  <input
                    type="checkbox"
                    name="nodeJs"
                    value="true"
                    {{#if data.node_js}}
                    checked
                    {{/if}}
                    id="nodejs"
                    class="tech"
                  />
                  <span>node js</span>

                  <input
                      type="checkbox"
                      name="nextJs"
                      value="true"
                      value="{{data.next_js}}"
                      {{#if data.next_js}}
                      checked
                      {{/if}}
                      id="nextjs"
                      class="tech-k"
                    />
                  <span class="span-k">next JS</span>
                </div>

                <div class="end-techno">
                  <input
                    type="checkbox" 
                    name="reactJs"
                    value="true"
                    value="{{data.react_js}}"
                    {{#if data.react_js}}
                    checked
                    {{/if}}
                    class="tech"
                    id="reacjs"
                  />
                  <span class="span-n">react JS</span>

                  <input
                    type="checkbox"
                    name="typescript"
                    value="true"
                    value="{{data.typescript}}"
                     {{#if data.typescript}}
                    checked
                    {{/if}}
                    id="typejs"
                    class="tech-k"
                  />
                  <span class="span-k">type JS</span>
                </div>
              </div>
              <div class="mb-3 mt-2">
                <label for="formFile" class="form-label">upload file</label>
                <input class="form-control" name="image" type="file" id="formFile" />
              </div>

              <button id="but" type="submit" class="btn btn-dark mt-3">Update Projek</button>
            </form>
          </div>
        </div>
      </div>
    </section>
