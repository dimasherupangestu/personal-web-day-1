    <section class="card-projek">
      <div class="container">
        <div
          class="row justify-content-center align-items-center g-2 text-center mb-3"
        >
          <div class="row justify-content-end align-items-end g-2">
            <div class="col">
              <h2 class="fw-bold m-3">my projek</h2>
            </div>

          </div>
          <div class="row justify-content-center align-items-center g-2">
            <div class="col justify-content-end">
              <a
                href="/myprojek"
                type="button"
                class="addnew btn btn-primary text-light"
              >Add My Projek</a>
            </div>
          </div>
        </div>
        <div class="row gx-5 justify-content-center align-items-center g-2">
          {{#each dataView}}
            <div class="col-md-4">
              <div class="card">
                <a href="projectDetail/{{this.id}}">
                  <img
                    src="/assets/imgs/{{this.image}}"
                    class="card-img-top"
                    alt="..."
                  />
                  <div class="card-body">
                    <h5 class="card-title">{{this.title}}</h5>
                    <h5 class="durasi">Durasi: {{this.durasi}} </h5>
                    <p class="card-text fs-6">{{this.pesan}}</p>
                    <div class="icon">
                      <p>Technologies:</p>
                      <span class="me-2">
                        {{#if this.react_js}}
                          <img src="assets/imgs/reacjs.png" class="img-icon" />
                        {{/if}}
                      </span>
                      <span class="me-2">
                        {{#if this.node_js}}
                          <img src="assets/imgs/nodeJs.png" class="img-icon" />
                        {{/if}}
                      </span>
                      <span class="me-2">
                        {{#if this.next_js}}
                          <img src="assets/imgs/nextjs.png" class="img-icon" />
                        {{/if}}
                      </span>
                      <span class="me-2">
                        {{#if this.typescript}}
                          <img src="assets/imgs/typejs.png" class="img-icon" />
                        {{/if}}
                      </span>

                    </div>
                    <div
                      class="row justify-content-center align-items-center g-2"
                    >
                      <div class="col-md">
                        <a
                          href="/updeteProjek/{{this.id}}"
                          class="btn btn-secondary w-75 text-light"
                        >edit</a></div>

                      <div class="col-md">
                        <form
                          id="deleteForm"
                          method="post"
                          action="/deProjek/{{this.id}}"
                        >
                          <button
                            class="btn btn-danger w-75 text-light"
                            onclick="confirmDelete(event)"
                          >hapus</button>
                        </form>
                      </div>
                    </div>
                  </div>
                </a>
              </div>
            </div>
          {{/each}}
        </div>
