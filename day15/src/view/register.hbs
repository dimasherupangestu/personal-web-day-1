<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>register</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />

    <!-- link font poppin -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link
      href="https://fonts.googleapis.com/css2?family=Oswald:wght@200;400&family=Poppins:wght@100;200;400;700&display=swap"
      rel="stylesheet"
    />
    <!-- link font poppin akhir -->

    <link rel="stylesheet" href="/assets/css/register.css" />
  </head>
  <body>

    <!-- navbar -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary position-relative">
      <div class="container">
        <a class="navbar-brand" href="#"><img
            src="/assets/imgs/brandred.png"
            width="60"
            alt=""
          /></a>
        <button
          class="navbar-toggler text-center"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div
          class="collapse navbar-collapse fw-bold"
          id="navbarSupportedContent"
        >
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/home">Home</a>
            </li>
            {{#if isLogin}}
              <li class="nav-item">
                <a class="nav-link" href="/myprojek">add Projek</a>
              </li>
            {{/if}}
            <li class="nav-item">
              <a class="nav-link" href="/testimonial">testimonial</a>
            </li>

          </ul>
          {{#if isLogin}}
            <a href="/logout" class="login nav-link">logout</a>
          {{else}}
            <a
              href="/registerUsers"
              class="regis nav-link active fw-bold"
            >register</a>
            <a href="/login" class="login nav-link">login</a>
          {{/if}}
          <form class="d-flex" role="search">
            <button
              type="button"
              class="btn btn-dark"
              style="background-color: orangered !important;border: 1px solid orangered"
            >
              <a href="/contak" class="text-decoration-none text-light">Contak
                me</a>
            </button>
          </form>
        </div>
      </div>
    </nav>
    {{! navbar akhir }}

    {{#if messages.danger}}
      <div class="alert alert-danger" role="alert">
        <div class="container">
          {{messages.danger}}
        </div>
      </div>
    {{/if}}
    <!-- form contak -->
    <section id="projek">
      <div class="container">
        <bs5-grid-row class="text-center">
          <col-md>
            <h2 class="mt-md-5 fw-bold text-center">Register your account</h2>
          </col-md>
        </bs5-grid-row>
        <div
          class="row justify-content-center align-items-center g-2 mb-3 mt-2"
        >
          <div class="col-md-7">
            <form method="post" action="/registerUsers">
              <div class="mb-3">
                <label for="name" class="form-label">name :</label>
                <input
                  type="text"
                  name="name"
                  class="form-control shadow-sm"
                  id="name"
                  aria-describedby="name"
                />
              </div>

              <div class="mb-3">
                <label for="email" class="form-label">Email :</label>
                <input
                  type="text"
                  name="email"
                  class="form-control shadow-sm"
                  id="email"
                  aria-describedby="email"
                />
              </div>

              <div class="mb-3">
                <label for="password" class="form-label">password :</label>
                <input
                  type="password"
                  name="password"
                  class="form-control shadow-sm"
                  id="password"
                  aria-describedby="password"
                />
              </div>

              <button id="but" type="submit" class="btn btn-dark btn-sm">
                Submit
              </button>
            </form>
          </div>
        </div>
      </div>
    </section>
    <!-- form projek akhir -->

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
  </body>
</html>